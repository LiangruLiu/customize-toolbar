{
	"name": "customize-toolbar",
	"displayName": "Customize Toolbar",
	"description": "A dark theme for VS Code made by LLR",
	"categories": [
		"Themes"
	],
	"keywords": [
		"black",
		"AMOLED",
		"dark",
		"night",
		"high-contrast",
		"theme",
		"vscode"
	],
	"publisher": "liangruliu",
	"icon": "images/icon.png",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.56.0"
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"main": "./sources/extension",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Customize Toolbar",
			"properties": {
				"CustomizeToolbar.testList": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"string1",
						"string2"
					]
				},
				"CustomizeToolbar.testDict": {
					"type": "object",
					"additionalProperties": {
						"type": "string"
					},
					"default": {
						"key1": "string1",
						"key2": "string2"
					}
				},
				"CustomizeToolbar.testDict2": {
					"type": "object",
					"properties": {
						"key1": {
							"type": "string",
							"default": "string1"
						},
						"key2": {
							"type": "string",
							"default": "string2"
						}
					},
					"default": {
						"key1": "string1",
						"key2": "string2"
					},
					"additionalProperties": false
				},
				"CustomizeToolbar.buttonConfig": {
					"order": 1,
					"markdownDescription": "dict1",
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"markdownDescription": "The name of the button to display on hover.",
								"type": "string"
							},
							"icon": {
								"markdownDescription": "A. A theme icon reference, like `\"\\$(zap)\" (no slash)` (see [doc](https://code.visualstudio.com/api/references/icons-in-labels)) \n\n B. An object with absolute paths for light and dark themes, like `{ \"light\": \".../a.svg\", \"dark\": \".../b.svg\" }` (use `builtin` to represent the root directory of this plugin's built-in icons.)",
								"type": [
									"string",
									"object"
								]
							},
							"command": {
								"markdownDescription": "The command executed by pressing the button.",
								"type": "string"
							},
							"when": {
								"markdownDescription": "(Optional) If a regular expression is given, the button will be displayed only if the filename matches it. \n\n For example: `\".*\\\\.txt|txt\\\\.md\"` matches files with a \".txt\" file extension or a \"txt.md\" file name; `\"(?<!\\\\.txt)$\"` matches files with a file extension other than \".txt\".",
								"type": "string"
							}
						},
						"additionalProperties": false,
						"default": {
							"name": "",
							"icon": "",
							"command": ""
						}
					},
					"default": [
						{
							"name": "TEST1",
							"icon": {
								"light": "D:/0 Documents/Icons/vscode icons/custom/run-dark.svg",
								"dark": "D:/0 Documents/Icons/vscode icons/custom/run-dark.svg"
							},
							"command": "workbench.action.terminal.toggleTerminal",
							"when": ".*\\.json|feature\\.js"
						},
						{
							"name": "TEST2",
							"icon": "$(zap)",
							"command": "workbench.action.terminal.toggleTerminal",
							"when": ".*\\.json|feature\\.js"
						},
						{
							"name": "Toggle Terminal",
							"icon": {
								"light": "builtin/terminal_light.svg",
								"dark": "builtin/terminal_dark.svg"
							},
							"command": "workbench.action.terminal.toggleTerminal"
						},
						{
							"name": "Save All",
							"icon": {
								"light": "builtin/save_dark.svg",
								"dark": "builtin/save_dark.svg"
							},
							"command": "workbench.action.files.saveAll"
						},
						{
							"name": "Cursor Align",
							"icon": {
								"light": "builtin/cursorAlign_dark.svg",
								"dark": "builtin/cursorAlign_dark.svg"
							},
							"command": "yo1dog.cursor-align.alignCursors"
						},
						{
							"name": "Toggle Bookmarks",
							"icon": {
								"light": "builtin/bookmark_dark.svg",
								"dark": "builtin/bookmark_dark.svg"
							},
							"command": "bookmarks.toggle"
						}
					]
				}
			}
		},
		"commands": [],
		"keybindings": [],
		"menus": {
			"editor/title": [],
			"editor/title/run": []
		}
	}
}
